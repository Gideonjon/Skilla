<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/course_image"
            android:layout_width="275dp"
            android:layout_height="270dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/photor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/boy_ava"
            app:layout_constraintStart_toStartOf="@+id/course_image"
            app:layout_constraintTop_toBottomOf="@+id/course_image" />


        <TextView
            android:id="@+id/user_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="SEO Intermediate"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/user_photo"
            app:layout_constraintStart_toEndOf="@+id/user_photo"
            app:layout_constraintTop_toTopOf="@+id/user_photo" />

        <ImageView
            android:id="@+id/three_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_more_vert_24"
            app:layout_constraintBottom_toBottomOf="@id/user_course"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_course"
            app:layout_constraintTop_toTopOf="@id/user_course" />


        <TextView
            android:id="@+id/course_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxEms="15"
            android:text="In this group the goal is essentially to help each other grow in ui/ux design.. "
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/user_photo"
            app:layout_constraintTop_toBottomOf="@id/user_photo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hasthtag"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:background="@drawable/course_xml"
            android:fontFamily="@font/poppins_light"
            android:text="#design"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/course_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/course_text" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#E3D7D7"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/course_text">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/image_one"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/image_two"
                    app:layout_constraintBottom_toBottomOf="@+id/image_1"
                    app:layout_constraintStart_toEndOf="@id/image_1"
                    app:layout_constraintTop_toTopOf="@+id/image_1" />


                <ImageView
                    android:id="@+id/image_3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/image_three"
                    app:layout_constraintBottom_toBottomOf="@+id/image_2"
                    app:layout_constraintStart_toEndOf="@id/image_2"
                    app:layout_constraintTop_toTopOf="@+id/image_2" />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_3"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Join The Space"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>